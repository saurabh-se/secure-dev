<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>CompSecureApp</display-name>
	
	<filter>
		<filter-name>SimpleCORSFilter</filter-name>
		<filter-class>com.se.compsecure.filter.SimpleCORSFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AdminFilter</filter-name>
		<filter-class>com.se.compsecure.filter.AdminFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SimpleCORSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AdminFilter</filter-name>
		<url-pattern>/ad/*</url-pattern>
	</filter-mapping>
</web-app>    